{
  "name": "proofmint-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "sync:deployments": "mkdir -p src/addresses && cp -f ../proofmint/deployments/sepolia.json src/addresses/sepolia.json",
    "dev": "vite",
    "build": "npm run sync:deployments && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "sync:deployments:local": "mkdir -p src/addresses && cp -f ../proofmint/deployments/localhost.json src/addresses/sepolia.json",
    "dev:local": "npm run sync:deployments:local && vite",
    "dev:sepolia": "npm run sync:deployments && vite --mode sepolia"
  },
  "dependencies": {
    "@walletconnect/ethereum-provider": "^2.21.8",
    "ethers": "^6.15.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.2"
  }
}
