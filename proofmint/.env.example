# RPC endpoint for Sepolia (Alchemy or Infura)
ALCHEMY_SEPOLIA_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Private key for the deploying account (never commit your real one!)
WALLET_PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# Deployment parameters
RATE_TOKENS_PER_ETH=1000   # How many tokens per 1 ETH
CAP_ETH=10                 # Crowdsale cap in ETH

# Addresses will be filled in after deployment
CROWDSALE=0xCrowdsaleAddressFromDeploy
TOKEN_ADDRESS=0xTokenAddressIfDeployed
