{
  "name": "proofmint",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "proofmint-frontend"
  ],
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:file": "hardhat test",
    "test:changed": "bash -lc 'FILES=$(git diff --name-only --diff-filter=ACMRTUXB HEAD~1 | grep -E \"^test/.*\\.ts$\") ; if [ -z \"$FILES\" ]; then echo \"No changed test files â€” running full suite\" ; npx hardhat test ; else echo \"Running changed tests:\" $FILES ; npx hardhat test $FILES ; fi'",
    "coverage": "hardhat coverage",
    "verify:sepolia": "hardhat verify --network sepolia",
    "buy:sepolia": "hardhat run scripts/buy.ts --network sepolia",
    "withdraw:sepolia": "hardhat run scripts/withdraw.ts --network sepolia",
    "dev:ui": "npm -w proofmint-frontend run dev",
    "build:ui": "npm -w proofmint-frontend run build",
    "preview:ui": "npm -w proofmint-frontend run preview",
    "test:contracts": "hardhat test",
    "node:hh": "hardhat node",
    "node:anvil": "anvil",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:anvil": "hardhat run scripts/deploy.ts --network anvil",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "show:sepolia": "jq -r 'to_entries[] | \"\\(.key): \\(.value)\"' deployments/sepolia.json",
    "withdraw:sepolia:ts": "hardhat run scripts/withdraw.ts --network sepolia",
    "deploy:sepolia:ts": "hardhat run scripts/deploy.ts --network sepolia"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/node": "^24.5.2",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  }
}
